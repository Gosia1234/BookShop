<p id="notice"><%= notice %></p>

<h1>Listing Sale Items</h1>

<table>
  <thead>
    <tr>
      <th>Saleprice</th>
      <th>Returned</th>
      <th>Book</th>
      <th>Sale</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sale_items.each do |sale_item| %>
      <tr>
        <td><%= sale_item.salePrice %></td>
        <td><%= sale_item.returned %></td>
        <td><%= sale_item.book %></td>
        <td><%= sale_item.sale %></td>
        <td><%= link_to 'Show', sale_item %></td>
        <td><%= link_to 'Edit', edit_sale_item_path(sale_item) %></td>
        <td><%= link_to 'Destroy', sale_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


