<p id="notice"><%= notice %></p>

<h1>Listing Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Pages</th>
      <th>Cost Price</th>
      <th>Isbn</th>
      <th>Qty</th>
      <th>Publisher</th>
      <th>Description</th>
      <th>Image</th>
      <th>Relase Date</th>
      <th>Supplier</th>
       <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.pages %></td>
        <td><%= book.costPrice %></td>
        <td><%= book.ISBN %></td>
        <td><%= book.gty %></td>
        <td><%= book.publisher %></td>
        <td><%= book.description %></td>
        <td><%= book.image %></td>
        <td><%= book.relaseDate %></td>
        <td><%= book.supplier %></td>
        <td><%= book.category %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

