<h1>Shopping Cart</h1>

<% if @cart.empty? %>
<p>Your cart is empty</p>
<% end %>

<% total = 0 %>

<table class="cart">
    <tr>
        <td class="legend"></td>
        <td class="legend">Item</td>
        <td class="legend">Price</td>
        <td class="legend">Quantity</td>
        <td class="legend">Total</td>
    </tr>
    
<% @cart.each do |id,quantity | %>
<% book = Book.find_by_id(id)%>
<tr>
    <td>
        <div class="image">
           
        </div>
    </td>
    <td class="title"><%= link_to  'book.title', book %></td>
    <td class="price"><%= number_to_currency(22) %></td>
    <td class="quantity"><%= quantity %> <br /> </td>
    <td class="price"><%= number_to_currency(quantity * 22, :unit => "Â£") %></td>
</tr>
    <% total += quantity *22 %>
<% end %>
<tr>
    <td colspan="4">
        <div class="total">Total:</div>
    </td>
    <td>
        <div class="price"><%= number_to_currency(total, :unit => "Eur") %></div>
    </td>
</tr>
</table>
<p>
    <%= link_to 'Continue Shopping', :controller => :books %>
</p>



